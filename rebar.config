{erl_opts, [debug_info]}.
{deps, [
    %%
    %%  Direct dependencies.
    %%
    {lager,         ".*", {git, "https://github.com/erlang-lager/lager.git",      {tag, "3.9.2"}}},
    {yaws,          ".*", {git, "https://github.com/klacke/yaws.git",             {ref, "5d146e5e91"}}},
    {exometer_core, ".*", {git, "https://github.com/Feuerlabs/exometer_core.git", {tag, "1.6.1"}}}
]}.
{edoc_opts, [
    {application, ["exometer_http_yaws"]},
    {doclet, edown_doclet},
    {subpackages, false},
    {top_level_readme, {"./README.md", "http://github.com/erisata/exometer_http_yaws"}}
]}.
{ct_opts, [
    {sys_config, "test/itest-sys.config"}
]}.
{overrides, [
    {override, yaws, [
        {plugins, [
            {pc, ".*", {git, "https://github.com/blt/port_compiler.git", {tag, "v1.14.0"}}}
        ]},
        {artifacts, [
            "priv/lib/epam.so",
            "priv/lib/setuid_drv.so",
            "priv/lib/yaws_sendfile_drv.so"
        ]},
        {provider_hooks, [
            {pre, [
                {compile, {pc, compile}},
                {clean,   {pc, clean}}
            ]}
        ]},
        {port_specs, [
            {"priv/lib/epam.so",              ["${REBAR_DEPS_DIR}/yaws/c_src/epam.c"]},
            {"priv/lib/setuid_drv.so",        ["${REBAR_DEPS_DIR}/yaws/c_src/setuid_drv.c"]},
            {"priv/lib/yaws_sendfile_drv.so", ["${REBAR_DEPS_DIR}/yaws/c_src/yaws_sendfile_drv.c", "${REBAR_DEPS_DIR}/yaws/c_src/hashtable.c"]}
        ]}
    ]}
]}.
{profiles, [
    {test, [
        {deps, [
            {sync, ".*", {git, "https://github.com/rustyio/sync.git", {tag, "v0.3.0"}}}
        ]}
    ]},
    {docs, [
        {deps, [
            {edown, ".*", {git, "https://github.com/uwiger/edown.git", {tag, "0.8.4"}}}
        ]}
    ]}
]}.
